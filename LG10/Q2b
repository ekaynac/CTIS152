#include <stdio.h>

int digits(int num){ // önce recursion çağır sonra bastır, çözüle çözüle düzeltsin
    printf("\t%d", num%10);
    if (num >0)
        digits(num/10);
}
int main(void){
    printf("Enter a number: ");
    int num;
    scanf("%d", &num);
    printf("Digits of the number %d are:\n", num);
    digits(num);
}